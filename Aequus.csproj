  </ItemGroup>

  <ItemGroup>
	<ProjectReference Include="SourceGenerators\SourceGenerators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	<AdditionalFiles Include="**\*.png" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Content\Boss\Crabson\Rewards\CrabsonTreasureChest.png" />
    <None Remove="Projectiles\Magic\NightfallGlint.png" />
    <None Remove="Projectiles\Magic\NightfallProj.png" />
  </ItemGroup>

</Project>