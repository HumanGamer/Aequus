<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\tModLoader.targets" />
	
  <PropertyGroup>
    <AssemblyName>Aequus</AssemblyName>
    <TargetFramework>net6.0</TargetFramework>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <LangVersion>latest</LangVersion>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <DocumentationFile>Aequus.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="tModLoader.CodeAssist" Version="0.1.*" />
  </ItemGroup>
		
  <ItemGroup>
    <None Remove="SourceGenerators\**" />
	<EmbeddedResource Remove="SourceGenerators\**" />
	<Compile Remove="SourceGenerators\**" />
  </ItemGroup>

  <ItemGroup>
	<ProjectReference Include="SourceGenerators\SourceGenerators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	<AdditionalFiles Include="**\*.png" />
	<AdditionalFiles Include="**\*.ogg" />
	<AdditionalFiles Include="**\Localization\*.hjson" />
  	<AdditionalFiles Remove="**\bin\**" />
	<AdditionalFiles Remove="**\obj\**" />
	<AdditionalFiles Remove="**\SourceGenerators\**" />
	<AdditionalFiles Remove="**\Properties\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Items\Consumables\ShimmerSundialCharge.png" />
    <None Remove="Items\Weapons\Melee\RecordBreaker\RecordBreaker.png" />
    <None Remove="Items\Weapons\Melee\RecordBreaker\RecordBreaker_Glow.png" />
    <None Remove="Items\Weapons\Melee\ThrashBag\ThrashBag.png" />
    <None Remove="Items\Weapons\Melee\ThrashBag\ThrashBag_Grabber.png" />
    <None Remove="Localization\en-US_Mods.Aequus.DamageClasses.hjson" />
    <None Remove="Localization\en-US_Mods.Aequus.Items.hjson" />
  </ItemGroup>

</Project>