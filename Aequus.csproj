  </ItemGroup>
	
  <ItemGroup>
    <PackageReference Include="tModLoader.CodeAssist" Version="0.1.*" />
  </ItemGroup>
	
  <ItemGroup>
    <Reference Include="ShopQuotesMod">
      <HintPath>..\..\ModReader\ShopQuotesMod\ShopQuotesMod.dll</HintPath>
    </Reference>
  </ItemGroup>
	
  <ItemGroup>
    <None Remove="SourceGenerators\**" />
