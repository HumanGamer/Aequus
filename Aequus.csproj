<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\tModLoader.targets" />
	
  <PropertyGroup>
    <AssemblyName>Aequus</AssemblyName>
    <TargetFramework>net6.0</TargetFramework>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <LangVersion>latest</LangVersion>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <DocumentationFile>Aequus.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="tModLoader.CodeAssist" Version="0.1.*" />
  </ItemGroup>
		
  <ItemGroup>
    <None Remove="SourceGenerators\**" />
	<EmbeddedResource Remove="SourceGenerators\**" />
	<Compile Remove="SourceGenerators\**" />
  </ItemGroup>

  <ItemGroup>
	<ProjectReference Include="SourceGenerators\SourceGenerators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	<AdditionalFiles Include="**\*.png" />
	<AdditionalFiles Include="**\*.ogg" />
	<AdditionalFiles Include="**\Localization\*.hjson" />
  	<AdditionalFiles Remove="**\bin\**" />
	<AdditionalFiles Remove="**\obj\**" />
	<AdditionalFiles Remove="**\SourceGenerators\**" />
	<AdditionalFiles Remove="**\Properties\**" />
  </ItemGroup>

  <PropertyGroup>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>Temp</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/*.cs" Condition="'$(Configuration)' == 'Debug'" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="CrossMod\SplitSupport\ItemContent\Racquets\RacquetStarite.png" />
    <None Remove="Items\Equipment\Accessories\PotionCanteen\PotionCanteenEmpty.png" />
    <None Remove="Items\Equipment\Vanity\Masks\DustDevilMaskFire.png" />
    <None Remove="Items\Equipment\Vanity\Masks\DustDevilMaskFire_Head.png" />
    <None Remove="Items\Equipment\Vanity\Masks\DustDevilMaskIce.png" />
    <None Remove="Items\Equipment\Vanity\Masks\DustDevilMaskIce_Head.png" />
    <None Remove="Items\Equipment\Vanity\Masks\OmegaStariteMask_Glow.png" />
    <None Remove="Items\Equipment\Vanity\Masks\OmegaStariteMask_Head_Glow.png" />
    <None Remove="Items\Equipment\Vanity\Masks\RedSpriteMask_Glow.png" />
    <None Remove="Items\Equipment\Vanity\Masks\RedSpriteMask_Head_Glow.png" />
    <None Remove="Items\Equipment\Vanity\Masks\SpaceSquidMask_Glow.png" />
    <None Remove="Items\Equipment\Vanity\Masks\SpaceSquidMask_Head_Glow.png" />
    <None Remove="Items\Weapons\Necromancy\Sceptres\Zombie\ZombieSceptreParticle.png" />
    <None Remove="Localization\en-US_Mods.Aequus.Tiles.hjson" />
  </ItemGroup>

</Project>